// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  engineType = "library"
}

datasource db {
  provider = "sqlite"
}

model ScanResult {
  id          String   @id @default(cuid())
  url         String
  host        String
  timestamp   DateTime @default(now())
  status      String   // 'safe', 'vulnerable', 'error'
  vulnerabilities Json? // array of vulnerability objects
  scanDuration Int?    // in milliseconds
}

model TrendingSite {
  id    String @id @default(cuid())
  url   String @unique
  name  String
  rank  Int
}

model UrlCache {
  id        String   @id @default(cuid())
  host      String   @unique
  lastScan  DateTime?
  cachedResult Json?
  expiresAt DateTime?
}
